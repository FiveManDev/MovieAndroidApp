<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.admin.Admin_DashBoardFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            tools:context=".fragment.Profile_information_fragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="6dp"
                android:paddingEnd="6dp">

                <LinearLayout
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:text="Dashboard"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:backgroundTint="@color/primary_color"
                        android:text="ADD ITEM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_darker"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordertop"
                        android:padding="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Users created this month"
                                android:textColor="#cacacb"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/admin_latest_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="5672"
                                android:textColor="@color/white"
                                android:textSize="24sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_person"
                            card_view:tint="@color/primary_color" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_darker"
                    android:elevation="8dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordertop"
                        android:padding="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Movies added this month"
                                android:textColor="#cacacb"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="1172"
                                android:textColor="@color/white"
                                android:textSize="24sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_movies" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_darker"
                    android:elevation="8dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordertop"
                        android:padding="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reviews reviewed this month"
                                android:textColor="#cacacb"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="1172"
                                android:textColor="@color/white"
                                android:textSize="24sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_comment" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_darker"
                    android:elevation="8dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordertop"
                        android:padding="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total money gained"
                                android:textColor="#cacacb"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="1172"
                                android:textColor="@color/white"
                                android:textSize="24sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_chart"
                            card_view:tint="@color/primary_color" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_darker"
                    android:elevation="8dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@drawable/borderbottom_row"
                            android:layout_marginBottom="-5dp"
                            android:backgroundTint="@color/gray_darker"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="bottom"
                                android:src="@drawable/ic_movies" />
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:text="Top Movies"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <ScrollView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scrollbars="vertical">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:backgroundTint="@color/gray_darker">

                                    <TableRow android:background="@drawable/borderbottom_row">

                                        <TextView
                                            android:layout_width="50dp"
                                            android:layout_gravity="start"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:text="TOP"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_gravity="start"
                                            android:layout_width="250dp"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:text="TITLE"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_gravity="start"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:text="category"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_gravity="start"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:text="rating"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />
                                    </TableRow>
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rcv_top_movies_dashboard"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        />
                                </TableLayout>
                            </HorizontalScrollView>

                        </ScrollView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_darker"
                    android:elevation="8dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@drawable/borderbottom_row"
                            android:layout_marginBottom="-5dp"
                            android:backgroundTint="@color/gray_darker"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="bottom"
                                android:src="@drawable/ic_movies" />
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:text="Latest movies"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <ScrollView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scrollbars="vertical">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:backgroundTint="@color/gray_darker">

                                    <TableRow android:background="@drawable/borderbottom_row">

                                        <TextView
                                            android:layout_gravity="start"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:layout_width="50dp"
                                            android:text="TOP"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_gravity="start"
                                            android:layout_width="250dp"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:text="TITLE"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_gravity="start"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:text="CATEGORY"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_gravity="start"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:text="STATUS"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />
                                    </TableRow>
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rcv_profile_lastest_movies"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        />
                                </TableLayout>
                            </HorizontalScrollView>

                        </ScrollView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_darker"
                    android:elevation="8dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@drawable/borderbottom_row"
                            android:layout_marginBottom="-5dp"
                            android:backgroundTint="@color/gray_darker"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="bottom"
                                android:src="@drawable/ic_person"
                                card_view:tint="@color/primary_color" />
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:text="Latest users"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <ScrollView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scrollbars="vertical">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:backgroundTint="@color/gray_darker">

                                    <TableRow android:background="@drawable/borderbottom_row">

                                        <TextView
                                            android:layout_gravity="start"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:layout_width="50dp"
                                            android:text="SERIAL"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_gravity="start"
                                            android:layout_width="140dp"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:text="FULL NAME"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_gravity="start"
                                            android:maxLines="1"
                                            android:layout_width="120dp"
                                            android:padding="10dp"
                                            android:text="EMAIL"
                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_gravity="start"
                                            android:maxLines="1"
                                            android:layout_width="150dp"
                                            android:padding="10dp"
                                            android:text="USER NAME"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />
                                    </TableRow>
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rcv_profile_lastest_users"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        />
                                </TableLayout>
                            </HorizontalScrollView>

                        </ScrollView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_darker"
                    android:elevation="8dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@drawable/borderbottom_row"
                            android:layout_marginBottom="-5dp"
                            android:backgroundTint="@color/gray_darker"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="bottom"
                                android:src="@drawable/ic_star"
                                card_view:tint="@color/primary_color" />
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:text="Latest reviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <ScrollView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scrollbars="vertical">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:backgroundTint="@color/gray_darker">

                                    <TableRow android:background="@drawable/borderbottom_row">

                                        <TextView
                                            android:layout_width="50dp"
                                            android:layout_gravity="start"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:text="ID"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_gravity="start"
                                            android:layout_width="250dp"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:text="ITEM"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_gravity="start"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:text="category"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_gravity="start"
                                            android:maxLines="1"
                                            android:padding="10dp"
                                            android:text="rating"

                                            android:textColor="@color/gray_primary"
                                            android:textSize="12sp" />
                                    </TableRow>
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rcv_profile_movie_for_you"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        />
                                </TableLayout>
                            </HorizontalScrollView>

                        </ScrollView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>