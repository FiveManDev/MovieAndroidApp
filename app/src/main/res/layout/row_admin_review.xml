<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borderbottom_row">

        <TextView
            android:id="@+id/row_review_item_admin_id"
            android:layout_width="50dp"
            android:layout_gravity="start"
            android:maxLines="1"
            android:padding="10dp"
            android:text="ID"

            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/row_review_item_admin_title"
            android:layout_gravity="start"
            android:layout_width="200dp"
            android:maxLines="1"
            android:padding="10dp"
            android:text="Title"

            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/row_review_item_admin_author"
            android:layout_width="80dp"
            android:layout_gravity="start"
            android:maxLines="1"
            android:padding="10dp"
            android:text="AUTHOR"

            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/row_review_item_admin_content"
            android:layout_gravity="start"
            android:maxLines="1"
            android:padding="10dp"
            android:text="TEXT"
            android:layout_width="200dp"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_star"
                app:tint="@color/primary_color"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/row_review_item_admin_rating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="7.1"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/row_review_item_admin_date"
            android:layout_width="120dp"
            android:layout_gravity="start"
            android:maxLines="1"
            android:padding="10dp"
            android:text="CREATED DATE"

            android:textColor="@color/white"
            android:textSize="12sp" />
        <LinearLayout
            android:id="@+id/container_review_action"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_detail_review_admin"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/green"
                android:text="Detail"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/btn_delete_review_admin"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/error"
                android:text="Delete"
                android:textSize="14sp"/>

        </LinearLayout>
    </TableRow>


</HorizontalScrollView>
