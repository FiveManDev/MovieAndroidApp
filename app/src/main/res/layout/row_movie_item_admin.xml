<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:background="@drawable/borderbottom_row">

        <TextView
            android:id="@+id/row_movie_item_admin_id"
            android:layout_width="80dp"
            android:layout_gravity="start"
            android:maxLines="1"
            android:padding="10dp"
            android:text="SERIAL"

            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/row_movie_item_admin_name"
            android:layout_width="200dp"
            android:layout_gravity="start"
            android:maxLines="1"
            android:padding="10dp"
            android:text="TITLE"

            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/row_movie_item_admin_genre"
            android:layout_gravity="start"
            android:maxLines="1"
            android:padding="10dp"
            android:text="CATEGORY"
            android:layout_width="140dp"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_star"
                app:tint="@color/primary_color"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/row_movie_item_admin_rating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="7.1"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/row_movie_item_admin_visible"
            android:layout_width="90dp"
            android:layout_gravity="start"
            android:maxLines="1"
            android:padding="10dp"
            android:text="STATUS"

            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/row_movie_item_admin_releaseTime"
            android:layout_width="120dp"
            android:layout_gravity="start"
            android:maxLines="1"
            android:padding="10dp"
            android:text="CREATED DATE"

            android:textColor="@color/white"
            android:textSize="12sp" />


        <LinearLayout
            android:id="@+id/movie_item_admin_action"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_update_movie_admin"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/primary_color"
                android:text="Update"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/btn_block_movie_admin"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/green"
                android:text="Block"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/btn_delete_movie_admin"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/error"
                android:text="Delete"
                android:textSize="14sp"/>


        </LinearLayout>

    </TableRow>

</HorizontalScrollView>
